<model xmlns="http://namespaces.plone.org/supermodel/schema">
    <schema>
      <field name="release_date" type="zope.schema.Datetime">
        <description>Date the hotfix is released</description>
        <title>release date</title>
      </field>
      <field name="hotfix_version" type="zope.schema.Float">
        <description>version of the hotfix</description>
        <title>Hotfix Version</title>
      </field>
      <field name="description" type="zope.schema.Text">
        <description>Summary of hotfix contents</description>
        <title>Description</title>
      </field>
      <field name="product_name" type="zope.schema.TextLine">
        <description>What product this Hot Fix applies to.</description>
        <required>False</required>
        <title>Product Name</title>
      </field>
      <field name="product_version" type="zope.schema.Float">
        <description />
        <required>False</required>
        <title>Product Version</title>
      </field>
    </schema>
  </model>